<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_add_photos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/ic_add_photos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="27dp"
                android:text="@string/full_name"
                android:textColor="@color/colorTextSignUp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_photos"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/input_text_without_effects"
                android:ems="10"
                android:hint="@string/full_name_input_text"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/colorTextSignUp"
                android:textColorHint="@color/colorBorderInputText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_fullName" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="27dp"
                android:text="@string/birthday"
                android:textColor="@color/colorTextSignUp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/et_full_name"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-7dp" />

            <EditText
                android:id="@+id/et_birthday"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/input_text_without_effects"
                android:ems="10"
                android:hint="@string/birthday_input_text"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorTextSignUp"
                android:textColorHint="@color/colorBorderInputText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_birthday" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="27dp"
                android:text="@string/email"
                android:textColor="@color/colorTextSignUp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/et_birthday"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-6dp" />

            <EditText
                android:id="@+id/et_emailAdress"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/input_text_without_effects"
                android:ems="10"
                android:hint="@string/email_input_text"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorTextSignUp"
                android:textColorHint="@color/colorBorderInputText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="27dp"
                android:text="@string/phone_number"
                android:textColor="@color/colorTextSignUp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/et_emailAdress"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-6dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/input_text_without_effects"
                android:ems="10"
                android:hint="@string/phone_number_input_text"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorTextSignUp"
                android:textColorHint="@color/colorBorderInputText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="27dp"
                android:text="@string/location_adress"
                android:textColor="@color/colorTextSignUp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/et_phone"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-6dp" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/input_text_without_effects"
                android:ems="10"
                android:hint="@string/location_adress"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorTextSignUp"
                android:textColorHint="@color/colorBorderInputText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location" />


            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/green_button"
                android:fontFamily="@font/proximanova_semibold"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_location" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_next"></androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>