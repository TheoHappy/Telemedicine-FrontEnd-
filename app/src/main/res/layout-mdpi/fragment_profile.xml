<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Fragment.ProfileFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                style="@style/WhiteMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/White"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                tools:ignore="MissingConstraints,NotSibling">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ConstraintLayoutCard"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginEnd="27dp"
                    android:background="@drawable/one_gray_side">


                    <TextView
                        android:id="@+id/tv_name_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="22dp"
                        android:fontFamily="@font/proximanova_semibold"
                        android:text="@string/name"
                        android:textColor="@color/colorTextSignUp"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tv_speciality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/proximanova_regular_italic"
                        android:text="@string/speciality"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_doctor"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/avatar" />


                    <ImageView
                        android:id="@+id/icn_star1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        app:srcCompat="@drawable/ic_icn_star"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/iv_star2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@+id/icn_star1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        app:srcCompat="@drawable/ic_icn_star"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/iv_star3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_star2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        app:srcCompat="@drawable/ic_icn_star"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/iv_star4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_star3"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        app:srcCompat="@drawable/ic_icn_star"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/iv_star5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toEndOf="@+id/iv_star4"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        app:srcCompat="@drawable/ic_icn_star"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/proximanova_regular"
                        android:text="5"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/iv_star5"
                        app:layout_constraintTop_toBottomOf="@+id/tv_speciality"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="25dp"
                android:text="@string/short_description"
                android:textColor="@color/colorTextSignUp"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_short_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/proximanova_regular"
                android:paddingLeft="25dp"
                android:text="@string/welcome_text"
                android:textColor="@color/colorTextSecondary"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_short_description"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/proximanova_semibold"
                android:paddingLeft="25dp"
                android:text="@string/location"
                android:textColor="@color/colorTextSignUp"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_short_description_text"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_icn_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location" />

            <TextView
                android:id="@+id/tv_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/proximanova_regular"
                android:text="@string/location_example_text"
                android:textColor="@color/colorTextSecondary"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/tv_location"
                tools:ignore="MissingConstraints" />


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="420dp"
                android:layout_height="280dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.604"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_value"
                app:layout_constraintVertical_bias="0.05"
                tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/map"></androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>